<div class='page'>
  <div class='header'>
    {{#with header}}
      <header class='header__content'>
        <div class='header__block'>
          <img
            src='/svg/apple.svg'
            alt='Apple'
            class='header_icon'
          />
          <nav class='header__block'>
            {{#each links}}
              <a
                href='{{url}}'
                class='header__link'
              >{{text}}</a>
            {{/each}}
          </nav>
        </div>
        <div class='header__block'>
          <img
            src='/svg/search.svg'
            alt='Search'
            class='header_icon'
          />
          <img
            src='/svg/profile.svg'
            alt='Profile'
            class='header_icon'
          />
        </div>
      </header>
    {{/with}}
  </div>

  <div class='header_light'>
    {{#with header.ad}}  
      <div class='header__content'>
        <div class="header__text">{{title}}</div>
        {{#with link}}
          <a
            href='{{url}}'
            class='product__link header__text'
          >{{text}}</a>
        {{/with}}
      </div>
    {{/with}}
  </div>

  {{#with iphone_pro}}
